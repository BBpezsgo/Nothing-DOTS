using api;

while (1)
{
    byte[16] buffer = new byte[16];
    int l = receive(&buffer as any*, 16 as i32, 0 as f32*);
    for (int i = 0; i < l; i++)
    {
        print((char)buffer[i]);
    }
    if (l)
    {
        printline();
    }

    print("Message > ");
    temp string message = readline();
    send(message, message.length(), 0f, 0f);
}

