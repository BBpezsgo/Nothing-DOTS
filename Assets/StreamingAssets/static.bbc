using "api.bbc";

while (1)
{
    u8[2] v;

    float3 receivedDirection;
    i32 receivedLength = wreceive(&v, 2, &receivedDirection);
    if (receivedLength == 2) {
        if (v[0] == (u8)1 &&
            v[1] == (u8)2)
        {
            printline("Sending response ...");
            v[0] = (u8)3;
            v[1] = (u8)4;
            wsend(&v, 2, &receivedDirection, 1f);
        }
    }
}
